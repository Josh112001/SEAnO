<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onboarding4">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/s1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/e1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_end="20dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="70dp"/>

    <ImageView
        android:id="@+id/seano_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/seano_logo"
        app:layout_constraintTop_toBottomOf="@id/t1"
        app:layout_constraintStart_toStartOf="@id/s1"
        app:layout_constraintEnd_toEndOf="@id/e1"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_bold"
        android:textSize="25sp"
        android:text="Login your account"
        app:layout_constraintStart_toStartOf="@id/s1"
        app:layout_constraintEnd_toEndOf="@id/e1"
        app:layout_constraintTop_toBottomOf="@+id/seano_logo"
        android:textColor="#525F7F"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_bold"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:text="Enter your details"
        app:layout_constraintStart_toStartOf="@id/s1"
        app:layout_constraintEnd_toEndOf="@id/e1"
        app:layout_constraintTop_toBottomOf="@+id/text1"
        android:textColor="#98A3C7"/>

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/s1"
        app:layout_constraintEnd_toEndOf="@id/e1"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/text2">

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail"
            android:layout_marginStart="2dp"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="18sp"
            android:textColor="#A1B2CF"
            android:layout_alignParentTop="true"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/emailInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_medium"
            android:inputType="textEmailAddress"
            android:layout_below="@id/email"
            android:alpha=".2"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/s1"
        app:layout_constraintEnd_toEndOf="@id/e1"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/relative1">

        <TextView
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:layout_marginStart="2dp"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="18sp"
            android:textColor="#A1B2CF"
            android:layout_alignParentTop="true"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_medium"
            android:inputType="textPassword"
            android:layout_below="@id/password"
            android:alpha=".2"
            android:textSize="16sp" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/login_btn"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="#006DAA"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/relative2"
        app:layout_constraintStart_toStartOf="@id/s1"
        app:layout_constraintEnd_toEndOf="@+id/e1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_medium"
            android:text="Login"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_bold"
        android:textSize="14sp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="14dp"
        android:text="Don't have an account?"
        app:layout_constraintStart_toStartOf="@id/s1"
        app:layout_constraintEnd_toEndOf="@id/e1"
        app:layout_constraintTop_toBottomOf="@+id/login_btn"
        android:textColor="#1E293B"/>

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_bold"
        android:textSize="14sp"
        android:layout_marginTop="14dp"
        android:text="Sign Up"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/text3"
        app:layout_constraintTop_toBottomOf="@+id/login_btn"
        android:textColor="#006DAA"/>

    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_bold"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        android:text="Forgot Password"
        app:layout_constraintStart_toStartOf="@id/s1"
        app:layout_constraintEnd_toEndOf="@id/e1"
        app:layout_constraintTop_toBottomOf="@+id/text3"
        android:textColor="#006DAA"/>

    <View
        android:id="@+id/divider1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="50dp"
        android:background="#CBD5E1"
        android:layout_marginEnd="-40dp"
        app:layout_constraintEnd_toStartOf="@+id/text5"
        app:layout_constraintStart_toStartOf="@+id/s1"
        app:layout_constraintTop_toBottomOf="@id/text5" />

    <View
        android:id="@+id/divider2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="50dp"
        android:background="#CBD5E1"
        android:layout_marginStart="-40dp"
        app:layout_constraintStart_toEndOf="@+id/text5"
        app:layout_constraintEnd_toEndOf="@+id/e1"
        app:layout_constraintTop_toBottomOf="@id/text5" />

    <TextView
        android:id="@+id/text6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_bold"
        android:textSize="14sp"
        android:layout_marginTop="60dp"
        android:text="OR"
        app:layout_constraintTop_toTopOf="@id/text5"
        app:layout_constraintStart_toEndOf="@id/divider1"
        app:layout_constraintEnd_toStartOf="@id/divider2"
        android:textColor="#94A3B8"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/google_btn"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="#FFBB05"
        app:cardCornerRadius="10dp"
        android:layout_marginEnd="-10dp"
        app:layout_constraintEnd_toEndOf="@+id/divider1"
        app:layout_constraintStart_toStartOf="@+id/divider1"
        app:layout_constraintTop_toBottomOf="@id/divider1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/quicksand_medium"
            android:text="Google"
            android:layout_marginEnd="-15dp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginEnd="50dp"
            android:src="@drawable/google_icon" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/fb_btn"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="-10dp"
        app:cardBackgroundColor="#466CFF"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/divider2"
        app:layout_constraintStart_toStartOf="@id/divider2"
        app:layout_constraintEnd_toEndOf="@+id/divider2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_medium"
            android:text="Facebook"
            android:textSize="18sp"
            android:layout_marginEnd="-15dp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/fb_icon"
            android:layout_gravity="center"
            android:layout_marginEnd="50dp"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>