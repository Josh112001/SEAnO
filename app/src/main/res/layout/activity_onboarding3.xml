<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onboarding3">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/s1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/e1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_end="20dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="70dp"/>

    <ImageView
        android:id="@+id/seano_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/seano_logo"
        app:layout_constraintTop_toBottomOf="@id/t1"
        app:layout_constraintStart_toStartOf="@id/s1"
        app:layout_constraintEnd_toEndOf="@id/e1"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_bold"
        android:textSize="25sp"
        android:text="Create a profile"
        app:layout_constraintStart_toStartOf="@id/s1"
        app:layout_constraintEnd_toEndOf="@id/e1"
        app:layout_constraintTop_toBottomOf="@+id/seano_logo"
        android:textColor="#525F7F"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_bold"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:text="Create your account"
        app:layout_constraintStart_toStartOf="@id/s1"
        app:layout_constraintEnd_toEndOf="@id/e1"
        app:layout_constraintTop_toBottomOf="@+id/text1"
        android:textColor="#98A3C7"/>

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/s1"
        app:layout_constraintEnd_toEndOf="@id/e1"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/text2">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginStart="2dp"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="18sp"
            android:textColor="#A1B2CF"
            android:layout_alignParentTop="true"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/nameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_medium"
            android:inputType="textPersonName"
            android:layout_below="@id/name"
            android:alpha=".2"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/s1"
        app:layout_constraintEnd_toEndOf="@id/e1"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/relative1">

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:layout_marginStart="2dp"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="18sp"
            android:textColor="#A1B2CF"
            android:layout_alignParentTop="true"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/userNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="20"
            android:fontFamily="@font/quicksand_medium"
            android:inputType="textPersonName"
            android:layout_below="@id/userName"
            android:alpha=".2"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/s1"
        app:layout_constraintEnd_toEndOf="@id/e1"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/relative2">

        <TextView
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:layout_marginStart="2dp"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="18sp"
            android:textColor="#A1B2CF"
            android:layout_alignParentTop="true"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_medium"
            android:inputType="textPassword"
            android:layout_below="@id/password"
            android:alpha=".2"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/s1"
        app:layout_constraintEnd_toEndOf="@id/e1"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/relative3">

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail"
            android:layout_marginStart="2dp"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="18sp"
            android:textColor="#A1B2CF"
            android:layout_alignParentTop="true"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/emailInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_medium"
            android:inputType="textEmailAddress"
            android:layout_below="@id/email"
            android:alpha=".2"
            android:textSize="16sp" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/login_btn"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="80dp"
        app:cardBackgroundColor="#006DAA"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/relative4"
        app:layout_constraintStart_toStartOf="@id/s1"
        app:layout_constraintEnd_toEndOf="@+id/e1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_medium"
            android:text="Login"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>