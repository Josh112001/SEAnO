<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onboarding2">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/s1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/e1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_end="20dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="70dp"/>

    <ImageView
        android:id="@+id/seano_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/seano_logo"
        app:layout_constraintTop_toBottomOf="@id/t1"
        app:layout_constraintStart_toStartOf="@id/s1"
        app:layout_constraintEnd_toEndOf="@id/e1"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_bold"
        android:textSize="25sp"
        android:text="Create an account"
        app:layout_constraintStart_toStartOf="@id/s1"
        app:layout_constraintEnd_toEndOf="@id/e1"
        app:layout_constraintTop_toBottomOf="@+id/seano_logo"
        android:textColor="#525F7F"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_bold"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:text="Choose your account"
        app:layout_constraintStart_toStartOf="@id/s1"
        app:layout_constraintEnd_toEndOf="@id/e1"
        app:layout_constraintTop_toBottomOf="@+id/text1"
        android:textColor="#98A3C7"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/fb_btn"
        android:layout_width="358dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="#466CFF"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/text2"
        app:layout_constraintStart_toStartOf="@id/s1"
        app:layout_constraintEnd_toEndOf="@+id/e1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_medium"
            android:text="Facebook"
            android:textSize="18sp"
            android:layout_marginEnd="40dp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/fb_icon"
            android:layout_gravity="center"
            android:layout_marginEnd="120dp"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/google_btn"
        android:layout_width="358dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="#FFBB05"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/fb_btn"
        app:layout_constraintStart_toStartOf="@id/s1"
        app:layout_constraintEnd_toEndOf="@+id/e1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_medium"
            android:text="Google"
            android:textSize="18sp"
            android:layout_marginEnd="50dp"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:layout_gravity="center"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/google_icon"
            android:layout_gravity="center"
            android:layout_marginEnd="120dp"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/email_btn"
        android:layout_width="358dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="#EA3344"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/google_btn"
        app:layout_constraintStart_toStartOf="@id/s1"
        app:layout_constraintEnd_toEndOf="@+id/e1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_medium"
            android:text="E-mail"
            android:textSize="18sp"
            android:layout_marginEnd="52dp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/email_icon"
            android:layout_gravity="center"
            android:layout_marginEnd="120dp"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_bold"
        android:textSize="12sp"
        android:layout_marginTop="160dp"
        android:textAlignment="center"
        android:text="By using it you confirm that you have read and agree to our terms of service and privacy policy"
        app:layout_constraintStart_toStartOf="@id/s1"
        app:layout_constraintEnd_toEndOf="@id/e1"
        app:layout_constraintTop_toBottomOf="@+id/email_btn"
        android:textColor="#98A3C7"/>


</androidx.constraintlayout.widget.ConstraintLayout>